<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Base.Theme.Task1" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/darker_main</item>
        <item name="colorPrimaryVariant">@color/darker_main</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="colorSecondary">@color/darker_main</item>
        <item name="colorOnSecondary">@color/white</item>

        <item name="colorControlActivated">@color/darker_main</item>
        <item name="colorControlNormal">@color/semitext</item>
        <item name="colorControlHighlight">@color/main</item>

        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/text</item>
        <item name="android:textColorPrimary">@color/text</item>

        <item name="materialAlertDialogTheme">@style/CustomDialog</item>

        <item name="useMaterialThemeColors">true</item>

        <item name="android:windowFullscreen">true</item>
        <item name="android:windowNoTitle">true</item>

        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowLightNavigationBar">true</item>
        <item name="android:enforceNavigationBarContrast">false</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowLayoutInDisplayCutoutMode">shortEdges</item>
    </style>

    <style name="Theme.Task1" parent="Theme.MaterialComponents.Light.NoActionBar">

    </style>

    <style name="RobotoBoldTextAppearance">
        <item name="android:fontFamily">@font/pacifico_regular</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="CustomDialog" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="colorPrimary">@color/darker_main</item>
        <item name="colorSurface">@color/white</item>
        <item name="android:textColorPrimary">@color/text</item>
        <item name="buttonBarPositiveButtonStyle">@style/DialogButtonStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/DialogButtonStyle</item>
    </style>

    <style name="DialogButtonStyle" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/darker_main</item>
        <item name="android:fontFamily">@font/pacifico_regular</item>
    </style>

</resources>